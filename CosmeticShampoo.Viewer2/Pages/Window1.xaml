<Window x:Class="CosmeticShampoo.Viewer2.Pages.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CosmeticShampoo.Viewer2.Pages"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Rectangle Height="150" Width="150" Stroke="Black" Fill="Beige" StrokeThickness="2">
            <Rectangle.BitmapEffect>
                <DropShadowBitmapEffect Color="Black" Direction="-55" ShadowDepth="30" Softness=".8"/>
            </Rectangle.BitmapEffect>
        </Rectangle>
    </Grid>
</Window>
