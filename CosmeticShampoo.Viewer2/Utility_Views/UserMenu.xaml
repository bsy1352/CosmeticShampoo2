<UserControl x:Class="CosmeticShampoo.Viewer2.Utility_Views.UserMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:CosmeticShampoo.Viewer2.Utility_Views"
             mc:Ignorable="d" BorderThickness="0" FontFamily="NanumSquare ExtraBold" Background="Transparent">
    <Grid Height="70">
        <StackPanel Width="200" VerticalAlignment="Center">
            <Button Background="Transparent" BorderThickness="0">
                <StackPanel Orientation="Horizontal" Width="196">
                    <iconPacks:PackIconMaterial Kind="{Binding Path=Icon}" Opacity="0.5" VerticalAlignment="Center" Margin="10" Foreground="Black" Height="23" Width="23"   />
                    <TextBlock Text="{Binding Path=Header}" Foreground="Black" Width="87" Height="24" Margin="30 0 0 0" FontSize="20"/>
                </StackPanel>
            </Button>
        </StackPanel>


    </Grid>
</UserControl>
